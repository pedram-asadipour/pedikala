@using _01_Framework.Application
@using _01_Framework.Tools
@using Microsoft.AspNetCore.Http
@model _01_PedikalaQuery.Contract.Menu.MenuQueryModel
@inject IAuthHelper _authHelper

<div class="header-area header-sticky">
<div class="container">
<div class="row">
<div class="col-lg-12">
<div class="header-wrapper d-none d-lg-flex">

    <div class="logo">
        <a asp-page="/Index">
            <img src="~/MainTheme/img/logo.png" class="img-fluid" alt="">
        </a>
    </div>

    <div class="navigation-menu-wrapper">
        <nav>
            <ul>
                <li>
                    <a asp-page="/Index">صفحه اصلی</a>
                </li>

                <li class="menu-item-has-children">
                    <a href="#">محصولات</a>
                    <ul class="sub-menu">
                        @foreach (var item in Model.ProductCategories)
                        {
                            <li>
                                <a asp-page="/ProductCategory"
                                   asp-route-id="@item.Id"
                                   asp-route-slug="@item.Name.Sluggish()">
                                    @item.Name
                                </a>
                            </li>
                        }
                    </ul>
                </li>

                <li class="menu-item-has-children">
                    <a href="#">بلاگ سایت</a>
                    <ul class="sub-menu">
                        @foreach (var item in Model.ArticleCategories)
                        {
                            <li>
                                <a asp-page="/ArticleCategory"
                                   asp-route-id="@item.Id"
                                   asp-route-slug="@item.Name.Sluggish()">
                                    @item.Name
                                </a>
                            </li>
                        }
                    </ul>
                </li>

                <li>
                    <a href="#">ارتباط با ما</a>
                </li>
            </ul>
        </nav>
    </div>


    <div class="header-icon-wrapper">
        <ul class="icon-list">
            <li>
                <a href="javascript:void(0)" id="search-overlay-trigger">
                    <i class="ion-ios-search-strong"></i>
                </a>
            </li>

            @if (_authHelper.IsAuthenticated())
            {
                <li>
                    خوش آمدید @(_authHelper.GetCurrentAccount().Fullname)
                </li>
            }

            <li>
                <div class="header-settings-icon">

                    <a href="javascript:void(0)" class="header-settings-trigger"
                       id="header-settings-trigger">
                        <div class="setting-button">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </a>

                    <div class="settings-menu-wrapper" id="settings-menu-wrapper">
                        <div class="single-settings-block">
                            <h4 class="title"></h4>
                            <ul>
                                @if (_authHelper.IsAuthenticated())
                                {
                                    <li>
                                        <a href="#">مدیریت حساب</a>
                                    </li>
                                    <li>
                                        <a asp-page="./Account"
                                           asp-page-handler="SignOut">خروج</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-page="./Account">ورود - ثبت نام</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>


                </div>
            </li>


        </ul>
    </div>
</div>

<div class="header-mobile-navigation d-block d-lg-none">
    <div class="row align-items-center">
        <div class="col-6 col-md-6">
            <div class="header-logo">
                <a asp-page="/Index">
                    <img src="~/MainTheme/img/logo.png" class="img-fluid" alt="">
                </a>
            </div>
        </div>
        <div class="col-6 col-md-6">
            <div class="mobile-navigation text-right">
                <div class="header-icon-wrapper">
                    <ul class="icon-list justify-content-end">
                        <li>
                            <div class="header-cart-icon">
                                <a href="cart.html">
                                    <i class="ion-bag"></i>
                                    <span class="counter">3</span>
                                </a>
                            </div>
                        </li>
                        <li>
                            <a href="javascript:void(0)" class="mobile-menu-icon"
                               id="mobile-menu-trigger">
                                <i class="fa fa-bars"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


</div>
</div>
</div>
</div>

<div class="search-overlay" id="search-overlay">
    <a href="javascript:void(0)" class="close-search-overlay" id="close-search-overlay">
        <i class="ion-ios-close-empty"></i>
    </a>

    <!--=======  search form  =======-->

    <div class="search-form">
        <form asp-page="/Search" method="GET">
            <input type="search" name="search" id="search" placeholder="جست و جوی محصول ...">
            <button type="submit">
                <i class="ion-android-search"></i>
            </button>
        </form>
    </div>

    <!--=======  End of search form  =======-->
</div>

<div class="offcanvas-mobile-menu" id="offcanvas-mobile-menu">
    <a href="javascript:void(0)" class="offcanvas-menu-close" id="offcanvas-menu-close-trigger">
        <i class="ion-android-close"></i>
    </a>

    <div class="offcanvas-wrapper">

        <div class="offcanvas-inner-content">
            <div class="offcanvas-mobile-search-area">
                <form asp-page="/Search" method="GET">
                    <input type="search" name="search" id="search" placeholder="جست و جو ...">
                    <button type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            <nav class="offcanvas-navigation">
                <ul>

                    @if (_authHelper.IsAuthenticated())
                    {
                        <li>
                            خوش آمدید @(_authHelper.GetCurrentAccount().Fullname)
                        </li>
                    }

                    <li class="menu-item-has-children">
                        <a asp-page="/Index">صحفه اصلی</a>
                    </li>

                    <li class="menu-item-has-children">
                        <a href="#">محصولات</a>
                        <ul class="sub-menu">
                            @foreach (var item in Model.ProductCategories)
                            {
                                <li>
                                    <a asp-page="/ProductCategory"
                                       asp-route-id="@item.Id"
                                       asp-route-slug="@item.Name.Sluggish()">
                                        @item.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <li class="menu-item-has-children">
                        <a href="#">‌مقالات سایت</a>
                        <ul class="sub-menu">
                            @foreach (var item in Model.ArticleCategories)
                            {
                                <li>
                                    <a asp-page="/ArticleCategory"
                                       asp-route-id="@item.Id"
                                       asp-route-slug="@item.Name.Sluggish()">
                                        @item.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <li class="menu-item-has-children">
                        <a href="#">ارتباط با ما</a>
                    </li>
                </ul>
            </nav>

            <div class="offcanvas-settings">
                <nav class="offcanvas-navigation">
                    <ul>
                        @if (_authHelper.IsAuthenticated())
                        {
                            <li>
                                <a href="#">مدیریت حساب</a>
                            </li>
                            <li>
                                <a asp-page="./Account"
                                   asp-page-handler="SignOut">خروج</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-page="./Account">ورود - ثبت نام</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>


        </div>
    </div>

</div>