@page
@model ServiceHost.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "ویرایش رمز عبور";
    ViewData["MetaDescription"] = "ویرایش رمز عبور";
    ViewData["KeyWord"] = "ویرایش رمز عبور";
}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper">
                    <img class="breadcrumb-img" src="/MainTheme/img/backgrounds/default.jpg" alt="pattern" title="pattern" />
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ویرایش رمز عبور</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="../">صفحه اصلی</a>
                            </li>
                            <li class="active">ویرایش رمز عبور</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="page-content-area mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-4">

                                <div class="list-group list-group-flush login-form">

                                    <partial name="UserLinkLIst" model="@Model.Account" />

                                </div>

                            </div>


                            <div class="col-sm-12 col-md-12 col-lg-8 col-xs-12">
                                <form asp-page-handler="ChangePassword">

                                    <div class="login-form">
                                        <h4 class="login-title">ویرایش رمز عبور</h4>

                                        <div class="row">

                                            <div class="col-12 mb-20">
                                                <label asp-for="Command.CurrentPassword"></label>
                                                <input asp-for="Command.CurrentPassword" class="ltr">
                                                <span asp-validation-for="Command.CurrentPassword" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="Command.NewPassword"></label>
                                                <input asp-for="Command.NewPassword" class="ltr">
                                                <span asp-validation-for="Command.NewPassword" class="text-danger"></span>
                                            </div>

                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="Command.RePassword"></label>
                                                <input asp-for="Command.RePassword" class="ltr">
                                                <span asp-validation-for="Command.RePassword" class="text-danger"></span>
                                            </div>

                                            <div class="col-12">
                                                <button type="submit" class="register-button mt-0">ویرایش</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Meta
{
    <link rel="stylesheet" href="~/lib/sweet-alert/sweet-alert.min.css" />
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/sweet-alert/sweet-alert.min.js"></script>

    @if (!string.IsNullOrWhiteSpace(Model.ResultMessage))
    {
        @if (Model.StatusMessage)
        {
            <script>
                swal("عملیات با موفقیت انجام شد", "@Model.ResultMessage", "success");
            </script>
        }
        else
        {
            <script>
                swal("خطا", "@Model.ResultMessage", "error")
            </script>
        }
    }
}