@page
@model ServiceHost.Pages.Account.DashboardModel
@{
    ViewData["Title"] = "داشبورد";
    ViewData["MetaDescription"] = "داشبورد";
    ViewData["KeyWord"] = "داشبورد";
}



<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper">
                    <img class="breadcrumb-img" src="/MainTheme/img/backgrounds/default.jpg" alt="pattern" title="pattern" />
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">داشبورد</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="../">صفحه اصلی</a></li>
                            <li class="active">داشبورد</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="page-content-area mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-4">

                                <div class="list-group list-group-flush login-form">

                                    <partial name="UserLinkLIst" model="@Model.Account" />

                                </div>

                            </div>
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8">
                                <div>

                                    <div class="login-form">
                                        <h4 class="login-title">مشخصات کاربر</h4>

                                        <div class="row h5">

                                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-5">
                                                نام : @Model.Account.Fullname
                                            </div>
                                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-5">
                                                نام کاربری : @Model.Account.Username
                                            </div>
                                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-5">
                                                شماره موبایل : @Model.Account.Mobile
                                            </div>
                                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb-5">
                                                تاریخ ثبت نام در سایت : @Model.Account.CreationDate
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
