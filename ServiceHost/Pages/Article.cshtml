@page "{id}/{slug}"
@using _01_Framework.Tools
@model ServiceHost.Pages.ArticleModel
@{
    ViewData["Title"] = "دسته بندی " + Model.Article.Title;
    ViewData["MetaDescription"] = Model.Article.MetaDescription;
    ViewData["KeyWord"] = Model.Article.Keyword;
}



<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper">
                    <img class="breadcrumb-img" src="/MainTheme/img/backgrounds/header-bg-1820x400.jpg" alt="pattern" title="pattern" />
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">@Model.Article.Title</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            <li>
                                <a asp-page="/ArticleCategory"
                                   asp-route-id="@Model.Article.CategoryId"
                                   asp-route-slug="@Model.Article.CategoryName.Sluggish()">
                                    @Model.Article.CategoryName
                                </a>
                            </li>
                            <li class="active">@Model.Article.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">

                            <div class="col-lg-9 order-1 order-lg-1">
                                <div class="blog-page-content">

                                    <div class="blog-single-post-container">



                                        <h3 class="post-title">@Model.Article.Title</h3>

                                        <div class="post-meta">
                                            <p>
                                                <span>
                                                    <i class="fa fa-calendar"></i> تاریخ انشار:
                                                    <span>
                                                        @Model.Article.PublishDate
                                                    </span>
                                                </span>
                                            </p>
                                        </div>


                                        <div class="single-blog-post-media">
                                            <div class="image">
                                                <img src="~/Uploads/@Model.Article.Image" class="img-fluid"
                                                     alt="@Model.Article.ImageAlt"
                                                     title="@Model.Article.ImageTitle">
                                            </div>
                                        </div>


                                        <div class="post-content">
                                            @Html.Raw(Model.Article.Description)
                                        </div>

                                    </div>

                                    <div class="comment-section">
                                        <h3 class="comment-counter">4 COMMENTS</h3>


                                        <div class="comment-container">

                                            <div class="single-comment">
                                                <span class="reply-btn">
                                                    <a href="#">Reply</a>
                                                </span>

                                                <div class="image">
                                                    <img src="assets/img/blog/comment-icon.png" alt="">
                                                </div>
                                                <div class="content">
                                                    <h3 class="user">
                                                        admin <span class="comment-time">
                                                            April 28, 2019
                                                            at 3:09 am
                                                        </span>
                                                    </h3>
                                                    <p class="comment-text">
                                                        Lorem ipsum dolor sit amet consectetur
                                                        adipisicing elit. Sint quia rem dolorem et rerum est
                                                        laudantium eum dolores omnis perspiciatis.
                                                    </p>
                                                </div>

                                            </div>

                                            <!--=======  End of single comment  =======-->
                                            <!--=======  single reply comment  =======-->

                                            <div class="single-comment reply-comment">
                                                <span class="reply-btn">
                                                    <a href="#">Reply</a>
                                                </span>

                                                <div class="image">
                                                    <img src="assets/img/blog/comment-icon.png" alt="">
                                                </div>
                                                <div class="content">
                                                    <h3 class="user">
                                                        admin <span class="comment-time">
                                                            April 28, 2019
                                                            at 3:09 am
                                                        </span>
                                                    </h3>
                                                    <p class="comment-text">
                                                        Lorem ipsum dolor sit amet consectetur
                                                        adipisicing elit. Sint quia rem dolorem et rerum est
                                                        laudantium eum dolores omnis perspiciatis.
                                                    </p>
                                                </div>

                                            </div>

                                            <!--=======  End of single reply comment  =======-->
                                            <!--=======  single comment  =======-->

                                            <div class="single-comment">
                                                <span class="reply-btn">
                                                    <a href="#">Reply</a>
                                                </span>

                                                <div class="image">
                                                    <img src="assets/img/blog/comment-icon.png" alt="">
                                                </div>
                                                <div class="content">
                                                    <h3 class="user">
                                                        admin <span class="comment-time">
                                                            April 28, 2019
                                                            at 3:09 am
                                                        </span>
                                                    </h3>
                                                    <p class="comment-text">
                                                        Lorem ipsum dolor sit amet consectetur
                                                        adipisicing elit. Sint quia rem dolorem et rerum est
                                                        laudantium eum dolores omnis perspiciatis.
                                                    </p>
                                                </div>

                                            </div>

                                            <!--=======  End of single comment  =======-->


                                        </div>

                                        <!--=======  End of comment container  =======-->
                                        <!--=======  comment form container  =======-->

                                        <div class="comment-form-container">
                                            <h3 class="comment-form-title">LEAVE A REPLY</h3>
                                            <p>
                                                Your email address will not be published. Required fields are marked
                                                *
                                            </p>

                                            <!--=======  comment form  =======-->

                                            <div class="comment-form">
                                                <form action="#">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="form-group">
                                                                <label>Comment</label>
                                                                <textarea name="commentMessage"
                                                                          id="commentMessage"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>Name <span class="required">*</span></label>
                                                                <input type="text" name="commenterName">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>Email <span class="required">*</span></label>
                                                                <input type="text" name="commenterEmail">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label>Website</label>
                                                                <input type="text" name="commenterWebsite">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <button type="submit" class="comment-btn"
                                                                    name="submit">
                                                                post comment
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>

                                            <!--=======  End of comment form  =======-->
                                        </div>

                                        <!--=======  End of comment form container  =======-->

                                    </div>


                                    <!--=====  End of Comment section  ======-->
                                </div>
                                <!--=======  End of blog page content  =======-->
                            </div>
                            <div class="col-lg-3 order-2 order-lg-2">
                                <!--=======  page sidebar wrapper =======-->
                                <div class="page-sidebar-wrapper">
                                    <!--=======  single sidebar widget  =======-->
                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title">دسته بندی مقالات</h4>
                                        <ul class="single-sidebar-widget__category-list">
                                            @foreach (var item in Model.SimpleCategories)
                                            {
                                                <li class="has-children">
                                                    <a asp-page="./ArticleCategory"
                                                       asp-route-id="@item.Id"
                                                       asp-route-slug="@item.Name.Sluggish()"
                                                       class="@((Model.Article.CategoryId == item.Id) ? "active" : "")">
                                                        @item.Name <span class="counter">@item.ArticleCount</span>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>

                                    <div class="single-sidebar-widget">

                                        <h4 class="single-sidebar-widget__title">آخرین مقالات سایت</h4>
                                        <div class="block-container">
                                            @foreach (var item in Model.LastArticles)
                                            {
                                                <div class="single-block d-flex">
                                                    <div class="image">
                                                        <a asp-page="./Article"
                                                           asp-route-id="@item.Id"
                                                           asp-route-slug="@item.Title.Sluggish()">
                                                            <img src="~/Uploads/@item.Image"
                                                                 class="img-fluid"
                                                                 alt="@item.ImageAlt"
                                                                 title="@item.ImageTitle">
                                                        </a>
                                                    </div>
                                                    <div class="content">
                                                        <p>
                                                            <a asp-page="./Article"
                                                               asp-route-id="@item.Id"
                                                               asp-route-slug="@item.Title.Sluggish()">
                                                                @item.Title
                                                            </a> <span>@item.PublishDate</span>
                                                        </p>
                                                    </div>
                                                </div>

                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Meta
{
    @if (!string.IsNullOrWhiteSpace(Model.Article.CanonicalAddress))
    {
        <link rel="canonical" href="@Model.Article.CanonicalAddress" />
    }
}
