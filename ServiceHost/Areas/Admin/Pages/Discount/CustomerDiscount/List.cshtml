@model List<DiscountManagement.Application.Contract.CustomerDiscount.CustomerDiscountViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6 text-left">
                        <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="وضعیت تخفیفات هم به تاریخ شروع و پایان و هم به عملیات فعال یا غیر فعال بود ان بستگی دارد ------- شروع همه تخفیف ها از ساعت 12 شب و پایان همه تخفیف ها از ساعت 12 شب همان روز می باشد">راهنمای تخفیفات</button>
                    </div>
                    <div class="col-sm-6">
                        <h3 class="panel-title">لیست تخفیفات مشتری (@Model.Count)</h3>
                    </div>
                </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 text-center table-responsive">
                            <table id="datatable" class="table table-striped table-bordered ">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>نام محصول</th>
                                        <th>درصد تخفیف</th>
                                        <th>تاریخ شروع تخفیف</th>
                                        <th>تاریخ پایان تخفیف</th>
                                        <th>وضعیت تخفیف</th>
                                        <th>تاریخ ایجاد</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.DiscountRate%</td>
                                            <td>@item.StartDate</td>
                                            <td>@item.EndDate</td>
                                            <td>
                                                @if (item.DiscountStatus)
                                                {
                                                    <span><i class="md md-done text-success"></i>تخفیف فعال است</span>
                                                }
                                                else
                                                {
                                                    <span><i class="md md-clear text-danger"></i>تخفیف غیر فعال است</span>
                                                }
                                            </td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <a href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})" class="btn btn-warning waves-effect waves-light">ویرایش <i class="md md-edit"></i></a>

                                                @if (item.IsRemoved)
                                                {
                                                    <a href="#operation=@Url.Page("./Index", "Restore", new {id = item.Id})" class="btn btn-success waves-effect waves-light">فعال <i class="md md-check"></i></a>
                                                }
                                                else
                                                {
                                                    <a href="#operation=@Url.Page("./Index", "Removed", new {id = item.Id})" class="btn btn-danger waves-effect waves-light">غیر فعال <i class="md md-close"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
    </div>

</div>