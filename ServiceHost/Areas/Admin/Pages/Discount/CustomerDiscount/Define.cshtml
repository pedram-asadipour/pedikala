@model DiscountManagement.Application.Contract.CustomerDiscount.DefineCustomerDiscount

<form asp-page="./Index" asp-page-handler="Define"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">ایجاد تخفیف جدید </h4>
    </div>
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label"></label>
                    <select asp-for="ProductId" asp-items='new SelectList(Model.Products, "Id", "Name")'>
                        <option value="0">محصولات</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DiscountRate" class="control-label"></label>
                    <input asp-for="DiscountRate" class="form-control text-left" min="1" max="100" value="1">
                    <span asp-validation-for="DiscountRate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control datePickerInput" readonly>
                    <span asp-validation-for="StartDate" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control datePickerInput" readonly>
                    <span asp-validation-for="EndDate" class="error"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Reason" class="error"></span>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">لغو</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">تعریف تخفیف</button>
    </div>

</form>