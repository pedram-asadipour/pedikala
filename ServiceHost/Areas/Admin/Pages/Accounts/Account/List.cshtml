@using AccountManagement.Configuration.Permission
@model List<AccountManagement.Application.Contract.Account.AccountViewModel>


<div class="row" permission="@AccountPermissions.Account">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست حساب ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 text-center table-responsive">
                        <table id="datatable" class="table table-striped table-bordered ">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>پروفایل کاربر</th>
                                    <th>نام و نام خانوادگی</th>
                                    <th>نام کاربری</th>
                                    <th>شماره موبایل</th>
                                    <th>نقش کاربر</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>


                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(item.ProfileImage))
                                        {
                                            <img src="~/Uploads/@item.ProfileImage" style="width: 80px; height: 100px" alt="@item.Fullname" />
                                        }
                                        else
                                        {
                                            <img src="~/MainTheme/img/user-profile.png" style="width: 80px; height: 80px" alt="@item.Fullname" />
                                        }
                                    </td>
                                    <td>@item.Fullname</td>
                                    <td>@item.Username</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Role</td>
                                    <td>@item.CreationDate</td>
                                    <td> 
                                            <a permission="@AccountPermissions.EditAccount"
                                                href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})" class="btn btn-warning waves-effect waves-light">ویرایش<i class="md md-edit"></i></a>
                                            <a permission="@AccountPermissions.ChangePasswordAccount"
                                                href="#showmodal=@Url.Page("./Index", "ChangePassword", new {id = item.Id})" class="btn btn-primary waves-effect waves-light">تغییر رمز عبور<i class="md md-vpn-key"></i></a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>