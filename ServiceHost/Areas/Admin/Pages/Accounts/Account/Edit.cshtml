@using AccountManagement.Configuration.Permission
@model AccountManagement.Application.Contract.Account.EditAccount

<form asp-page="./Index" asp-page-handler="Edit" permission="@AccountPermissions.EditAccount"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">ویرایش حساب : @Model.Username </h4>
    </div>
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Fullname" class="control-label"></label>
                    <input asp-for="Fullname" class="form-control">
                    <span asp-validation-for="Fullname" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control ltr">
                    <span asp-validation-for="Username" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label"></label>
                    <select asp-for="RoleId" class="form-control" asp-items='new SelectList(Model.Roles,"Id","Name")'>
                        <option value="0">نقش کاربر</option>
                    </select>
                    <span asp-validation-for="RoleId" class="error"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Mobile" class="control-label"></label>
                    <input asp-for="Mobile" class="form-control ltr" />
                    <span asp-validation-for="Mobile" class="error"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <input asp-for="ProfileImage" class="form-control" accept="image/*">
                <span asp-validation-for="ProfileImage" class="error"></span>
            </div>
        </div>

        <input type="hidden" asp-for="Id">

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">لغو</button>
        <button type="submit" class="btn btn-pink waves-effect waves-light">ویرایش</button>
    </div>

</form>