@model List<BlogManagement.Application.Contract.Article.ArticleViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست مقالات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 text-center table-responsive">
                        <table id="datatable" class="table table-striped table-bordered ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>تصویر</th>
                                <th>عنوان مقاله</th>
                                <th>دسته بندی مقاله</th>
                                <th>وضعیت مقاله</th>
                                <th>تاریخ ایجاد</th>
                                <th>تاریخ انتشار</th>
                                <th>عملیات</th>
                            </tr>
                            </thead>


                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/Uploads/@item.Image" style="width: 150px; height: 80px" alt="@item.Title" />
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        @if (item.Status)
                                        {
                                            <i class="md md-desktop-windows text-success"></i>
                                            <span>در حال نمایش در سایت</span>
                                        }
                                        else
                                        {
                                            <i class="md md-alarm text-info"></i>
                                            <span>در انتظار انتشار در سایت</span>
                                        }
                                    </td>
                                    <td>@item.CreationDate</td>
                                    <td>@item.PublishDate</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light" asp-page="./Edit" asp-route-id="@item.Id">ویرایش <i class="md md-edit"></i></a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>