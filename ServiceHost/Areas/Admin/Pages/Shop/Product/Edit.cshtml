@model ShopManagement.Application.Contract.Product.EditProduct

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">ویرایش محصول : @Model.Name </h4>
    </div>
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductCode" class="control-label"></label>
                    <input asp-for="ProductCode" class="form-control ltr">
                    <span asp-validation-for="ProductCode" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="CategoryId" asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                    <option value="0">گروه محصول</option>
                </select>
                <span asp-validation-for="CategoryId" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control ltr">
                <span asp-validation-for="Image" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageAlt" class="control-label"></label>
                    <input asp-for="ImageAlt" class="form-control">
                    <span asp-validation-for="ImageAlt" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageTitle" class="control-label"></label>
                    <input asp-for="ImageTitle" class="form-control">
                    <span asp-validation-for="ImageTitle" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ShortDescription" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Keyword" class="control-label"></label>
                <input asp-for="Keyword" class="form-control tagInput">
                <span asp-validation-for="Keyword" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="MetaDescription" class="control-label"></label>
                <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MetaDescription" class="error"></span>
            </div>
        </div>

        <input type="hidden" asp-for="Id">

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">لغو</button>
        <button type="submit" class="btn btn-pink waves-effect waves-light">ویرایش</button>
    </div>

</form>