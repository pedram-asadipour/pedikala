@model ShopManagement.Application.Contract.ProductPicture.CreateProductPicture

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">ایجاد تصویر جدید برای محصول</h4>
    </div>
    <div class="modal-body">
        
        <div class="row">
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="ProductId" asp-items='new SelectList(Model.Products,"Id","Name")'>
                    <option value="0">محصول</option>
                </select>
                <span asp-validation-for="ProductId" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control ltr">
                <span asp-validation-for="Image" class="error"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageAlt" class="control-label"></label>
                    <input asp-for="ImageAlt" class="form-control">
                    <span asp-validation-for="ImageAlt" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageTitle" class="control-label"></label>
                    <input asp-for="ImageTitle" class="form-control">
                    <span asp-validation-for="ImageTitle" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">لغو</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>

</form>