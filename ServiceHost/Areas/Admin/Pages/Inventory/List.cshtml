@using InventoryManagement.Configuration.Permission
@model List<InventoryManagement.Application.Contract.Inventory.InventoryViewModel>


<div class="row" permission="@InventoryPermissions.Inventory">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست انبار محصولات (@Model.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 text-center table-responsive">
                        <table id="datatable" class="table table-striped table-bordered ">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام محصول</th>
                                    <th>قیمت محصول (تومان)</th>
                                    <th>موجودی انبار</th>
                                    <th>تاریخ ایجاد انبار</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>


                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.CurrentCount</td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a permission="@InventoryPermissions.EditInventory"
                                            href="#showmodal=@Url.Page("./Index", "Edit", new {id = item.Id})" class="btn btn-warning waves-effect waves-light">ویرایش <i class="md md-edit"></i></a>
                                        
                                        <a permission="@InventoryPermissions.IncreaseInventory"
                                            href="#showmodal=@Url.Page("./Index", "Increase", new {id = item.Id})" class="btn btn-success waves-effect waves-light">+ افزایش موجودی</a>
                                        
                                        <a permission="@InventoryPermissions.ReduceInventory"
                                            href="#showmodal=@Url.Page("./Index", "Reduce", new {id = item.Id})" class="btn btn-danger waves-effect waves-light">- کاهش موجودی</a>
                                        
                                        <a permission="@InventoryPermissions.ListOperationLog"
                                            href="#showmodal=@Url.Page("./Index", "OperationLog", new {id = item.Id})" class="btn btn-primary waves-effect waves-light"><span><i class="md md-assignment"></i> </span>گردش انبار</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>