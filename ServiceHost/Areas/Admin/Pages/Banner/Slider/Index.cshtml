@page
@using global::Banner.Management.Configuration.Permission
@model IndexModel
@{
    ViewData["Title"] = "نقش کاربران";
}


<div class="row">
    <div class="col-sm-6 text-left">
        <h4 permission="@BannerPermissions.CreateSlider">
            <a class="btn btn-purple btn-lg waves-effect waves-light m-b-15" href="#showmodal=@Url.Page("./Index","Create")">ایجاد نقش کاربری<i class="md md-add"></i></a>
        </h4>
    </div>
    <div class="col-sm-6">
        <h2 class="page-title">سلایدر</h2>
    </div>
</div>

<div id="siteContent" data-handler="list">
    <partial name="List" model="Model.Sliders" />
</div>



@section Meta
{
    <!-- SweetAlert -->
    <link href="~/lib/sweet-alert/sweet-alert.min.css" rel="stylesheet">

    <!-- DataTables -->
    <link href="~/lib/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

    <!--Persian DatePicker-->
    <link rel="stylesheet" href="~/lib/persian-datepicker/persian-datepicker.min.css">
}

@section Scripts
{
    <!-- Validation JQuery Unobtrusive -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- SweetAlert -->
    <script src="~/lib/sweet-alert/sweet-alert.min.js"></script>

    <!-- JQuery DataTable -->
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap.js"></script>

    <!--Persian DatePicker-->
    <script src="~/lib/persian-datepicker/persian-date.min.js"></script>
    <script src="~/lib/persian-datepicker/persian-datepicker.min.js"></script>

    <!-- Custom Site Script -->
    <script src="~/AdminTheme/js/site.js"></script>


