@page
@using CommentManagement.Configuration.Permission
@model IndexModel
@{
    ViewData["Title"] = "کامنت محصولات";
}


<div class="row">
    <div class="col-12">
        <h2 class="page-title">کامنت محصولات</h2>
    </div>
</div>


<div class="row" permission="@CommentPermissions.SearchProductComment">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">فیلتر کامنت ها</h3>
            </div>
            <div class="panel-body">

                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.Name"></label>
                        <input asp-for="@Model.SearchModel.Name" class="form-control" placeholder="نام کاربر">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.Email"></label>
                        <input asp-for="@Model.SearchModel.Email" class="form-control" placeholder="ایمیل کاربر">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">فیلتر</button>
                    <a asp-page="./Index" class="btn btn-inverse waves-effect waves-light m-r-5">نمایش همه</a>
                </form>

            </div> 
        </div> 
    </div> 

</div>


<div id="siteContent" data-handler="list">
    <partial name="List" model="Model.Commands" />
</div>



@section Meta
{
    <!-- SweetAlert -->
    <link href="~/lib/sweet-alert/sweet-alert.min.css" rel="stylesheet">

}

@section Scripts
{
    <!-- SweetAlert -->
    <script src="~/lib/sweet-alert/sweet-alert.min.js"></script>

    <!-- Custom Site Script -->
    <script src="~/AdminTheme/js/site.js"></script>
}
